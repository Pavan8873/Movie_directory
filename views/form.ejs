<form id="movie-form" method="POST" action="/create-movie">
    <label for="movie_name">Movie name:</label>
    <input type="text" id="movie_name" name="movie_name" required><br><br>
    
    <label for="rating">Rating:</label>
    <input type="number" id="rating" name="rating" min="1" max="10" required><br><br>
    
    <label for="duration">Duration:</label>
    <input type="number" id="duration" name="duration" min="1" required><br><br>
    
    <button type="submit">Add Movie</button>
</form> 


  